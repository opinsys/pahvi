
@import 'nib'
@import 'pahvicolors'

body
  background-color pahvicream
  font 1em/1.4 "Helvetica Neue","Lucida Grande", tahoma, arial, sans-serif

h1
  font-size 3em

.remote
  margin-top 4em

.remoteItem
  cursor pointer
  background-color pahvilightbrown
  margin-bottom 10px
  padding 1em
  height 5em
  img
    height 50px

  h2
    font-size 150%

  &.selected
    background-color darken(pahvilightbrown, 20%)

  .contentPreview
    float right


