
@import 'nib'
@import 'pahvicolors'

iconurl = url("/img/iconset.png")
switch_mode_icon = iconurl no-repeat 10px -635px pahvicream
switch_mode_icon_position_hover = 10px -690px
z-index_up_icon = iconurl no-repeat 0 -270px transparent
z-index_up_icon_hover = iconurl no-repeat 0 -305px transparent
z-index_down_icon = iconurl no-repeat 0 -340px transparent
z-index_down_icon_hover = iconurl no-repeat 0 -375px transparent
close_mediamenu_icon_position = 10px -470px
close_mediamenu_icon_position_hover = 10px -505px
open_mediamenu_icon_position = 10px -400px
open_mediamenu_icon_position_hover = 10px -435px
add_objects_icon = iconurl no-repeat 10px -745px transparent
add_objects_icon_hover = iconurl no-repeat 10px -790px white
layers_icon = iconurl no-repeat 10px -170px transparent
layers_icon_hover = iconurl no-repeat 10px -215px white
mediamenu_icon = iconurl no-repeat 10px -535px pahvicream
text_icon_position = 10px -80px
text_icon_position_hover = 10px -125px
image_icon_position = 10px 10px
image_icon_position_hover = 10px -35px
plainbox_icon_position = 10px -835px
plainbox_icon_position_hover = 10px -880px
remote_icon = iconurl no-repeat 10px -1305px pahvicream
remote_icon_position_hover = 10px -1360px


body
  font 1em/1.4 "Helvetica Neue","Lucida Grande", tahoma, arial, sans-serif
  background url("/img/pahvi-bg.jpg") repeat 0 0 scroll

strong
  font-weight bold
em
  font-style italic
pre
  font-family monaco, "Droid Sans Mono", courier, monospace

h1,h2
  margin 0
  padding 0
  
h1
  font-size 3em
  font-weight 800
  
h2
  font-size 1.5em

a
  color pahviurlblue
hr
  clear both
  border none
  float none
  height 0px
  margin 0
  width 100%
  
button:hover
  cursor pointer
  
.container
  height 100%
  margin 0 auto
  position relative
  width 100%
  
  button
    background-color pahvicream
    border none
    box-shadow 0 -1px 2px pahvigray
    font-size 0.7em
    height 60px
    margin 0
    padding 0 0.2em 0 50px
    text-align left
    text-transform uppercase
    word-wrap break-word
    width 140px
    &.edit, &.delete
      background-color pahvigray
      color pahviyellow
      font-size 0.6em
    &.delete
      border 2px solid pahviyellow !important
      border-radius 20px
      font-size 12px
      font-weight 600
      height 30px
      line-height 1
      padding 0
      right -15px
      text-align center
      top -15px
      width 30px
      &:hover
        background-color pahvired !important
  header
    position relative

  .wrap
    height 100%
    position relative
    width 100%
    
    .pasteboard
      border-top solid 1px pahvigray
      height 100%
      margin -1px
      position relative
      width 100%
      z-index 1
      
      .box.ui-draggable-dragging
        border dotted 2px black !important
        box-shadow 0px 0px 20px black !important
        cursor move !important
      .box.ui-draggable-dragging .tools
        border-left dotted 2px black !important
        border-right dotted 2px black !important
        border-top dotted 2px black !important
        margin-left -1px
      .box.ui-draggable
        cursor pointer
        
      .menu
        margin 0 5px 0
        position absolute
        right 30%
        top -60px

      button
        border-bottom 1px solid pahvigray

      // TODO: icon
      // button.openRemote
      //   background open_remote_icon
      button.openRemote
        background remote_icon
        &:hover
          background-position remote_icon_position_hover

      button.modeToggle
        background switch_mode_icon
        &:hover
          background-position switch_mode_icon_position_hover

      .tools
        background rgb(226,226,226)
        background linear-gradient(top, rgba(226,226,226,0.8) 0%, rgba(242,242,242,0.8) 50%, rgba(226,226,226,0.8) 100%)
        border-left 1px solid pahvigray
        border-right 1px solid pahvigray
        border-top 1px solid pahvigray
        display block
        height 30px
        left -1px
        margin 0
        padding 0
        position absolute
        top -30px
        visibility hidden
        width 100%

      .box
        padding .25em
        border 1px solid black
        min-height 30px
        min-width 60px
        &.hovering
          box-shadow 0 3px 10px blue, 0 -3px 10px blue
        &.selected
          box-shadow 0 3px 10px pahvigreen, 0 -3px 10px pahvigreen
          .transformable-handle-rotate
            background iconurl no-repeat 0 -930px pahvigray
            border-radius 20px
            height 20px
            left -15px
            padding 5px
            top -40px !important
            width 20px
        &.hovering
          box-shadow 0 10px 10px pahviyellow, 0 -10px 10px pahviyellow
        .transformable-handle-rotate
          background none
      // Only text box needs bottom padding?
      .textBox
        padding-bottom 0.5em
        ul
          list-style disc
        ol
          list-style decimal
        li
          margin-left 2em
      .imageBox
        border 0px
        background-color transparent
        padding 0px
        img
          width 100%
          height 100%

      ul
        list-style disc
      ol
        list-style decimal
      li
        margin-left 2em

      .box .tools
        visibility hidden
        button
          position absolute
        .edit
          border-radius 10px
          height 20px
          padding 0.2em 1em
          right 2em
          top 5px
          width auto
          white-space nowrap
          &:hover
            background-color pahvigreen
        .name
          line-height 1.75
          margin-left 1em
        .down, .up
          border none
          box-shadow none
          height 25px
          padding 0
          right -15px
          text-indent -9999px
          width 30px
        .up
          background z-index_up_icon
          top 30px
          &:hover
            background z-index_up_icon_hover
        .down
          background z-index_down_icon
          top 55px
          &:hover
            background z-index_down_icon_hover            
      // We need to use class hovering instean of meta selector :hover so that
      // we can also "hover" programatically using JavaScript
      .box.selected .tools
        visibility visible
        
    .mediamenu.open
      .closeOpenMediamenuBtn
        background-position close_mediamenu_icon_position
        &:hover
          background-position close_mediamenu_icon_position_hover
    .mediamenu.closed
      .closeOpenMediamenuBtn
         background-position open_mediamenu_icon_position
         &:hover
          background-position open_mediamenu_icon_position_hover
          
    .mediamenu
      background pahvicream repeat 0 0 scroll
      border-top 1px solid pahvigray
      border-left 1px solid pahvigray
      height 100%
      position absolute
      right 0
      top 0
      width 30%
      z-index 9999
      .closeOpenMediamenuBtn
        background-color rgba(255,253,241,0.7)
        background-image iconurl 
        background-repeat no-repeat 
        border-top-left-radius 10px 15px 
        border-bottom-left-radius 10px 15px
        left -55px
        height 35px
        position absolute
        text-indent -9999px
        top 40%
        width 55px
      nav
        height 50px
        margin 0 0 0 5px
        width 100%
        a
          background-color pahvicream
          border-left solid 1px bordergray
          border-top solid 1px bordergray
          border-right solid 1px bordergray
          float left
          height 50px
          text-indent -9999px
          width 50px
          &:first-child
            background add_objects_icon
            &:hover
              background add_objects_icon_hover
          &:nth-child(2)
            background layers_icon
            &:hover
              background layers_icon_hover
          &:hover, &.active
            background-color white
      .mediamenuBtn
        background mediamenu_icon
        left 5px
        position absolute
        top -60px
        
      .media
        background-color white
        border-top solid 1px bordergray
        display block
        height 100%
        width 100%
        .hovering
          box-shadow 0 0 2px pahvigray, 0 10px 5px pahviyellow, 0 -10px 5px pahviyellow
        .selected
          background-color pahviblue
          border 2px solid pahvigreen !important
        .layersSortable 
          list-style-type none
        >div
          font-size 0.8em
          line-height 2
          margin 1em
          padding 0
          
        .addElements
          position relative
          p
            background url("/img/drag-drop-arrow.png") no-repeat 20px 40px transparent
            height 135px
            padding 0 0 0 15px
            position absolute !important
            left 130px
            top -125px
            width 120px
            span
              background-color pahviyellow
              border 2px dotted pahvigray
              border-radius 10px
              box-shadow 1px 2px 4px pahvigray, -1px -1px 3px pahvigray
              display block
              line-height 1.2
              padding 0.35em
              text-align center
              text-transform uppercase
              transform rotate(10deg) translate(15%,-5%)
              width 150px
          div
            background-color pahviyellow
            border dotted 2px pahvigray
            cursor move
            height 35px
            margin 0 0 0.5em
            padding 1em 0.5em 0 55px
            text-align center
            text-transform uppercase
            width 80%
          .textbox
            background-image iconurl
            background-position text_icon_position
            background-repeat no-repeat
            &:hover
              background-position text_icon_position_hover
          .plainbox
            background-image iconurl
            background-repeat no-repeat
            background-position plainbox_icon_position
            &:hover
              background-position plainbox_icon_position_hover
          .imagebox
            background-image iconurl
            background-repeat no-repeat
            background-position image_icon_position
            &:hover
              background-position image_icon_position_hover
          .text
            background iconurl no-repeat 0 -75px transparent
          .image
            background iconurl no-repeat 0 10px transparent
            h2
              margin 0 0 0.5em
              background-position 10px -35px
        .layers
          .layersSortable 
            list-style-type none
            margin 0
            padding 0
            li
              background-color pahvilightgray
              background-image iconurl
              background-repeat no-repeat
              border 2px solid pahvigray
              height 35px
              margin 0 0 0.5em
              padding 1em 0.5em 0 55px
              position relative
              width 80%
              &.hovering
                background-color pahviyellow !important
                cursor pointer
              &:hover > .delete
                display block
              .delete
                display none
                margin-right 10px
                position absolute
                right 0
                top 10px
            .text
              background-position text_icon_position
            .plain
              background-position plainbox_icon_position
            .image
              background-position image_icon_position
              
